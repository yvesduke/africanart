<div class="jumbotron">
  <h1>African Handcrafted <br>
    Art works sold Online.</h1>
  <h2>Discover one-of-the-African-Unique-ArtWorks</h2>
</div>
<div class="center">
   <h1>New Listing</h1>
<div class="row">
  <% @listings.each do |listing| %>
   <div class="col-md-3">
    <div class="thumbnail">
      
      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <p><%= "Sold by #{listing.user.name}" %></p>
      </div>
    </div>
     
   </div>
  <% end %> 
</div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
